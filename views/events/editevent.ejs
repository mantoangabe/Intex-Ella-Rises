<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Event</title>
    <link rel="icon" type="image/x-icon" href="/images/logo.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>

<body class="bg-light custom-bg">

  <nav class="navbar navbar-expand-lg er-nav">
  <div class="container d-flex justify-content-between align-items-center">
    <a class="navbar-brand d-flex align-items-center" href="/">
      <img src="/images/ella.jpeg" class="er-logo-small me-2">
      <span class="fw-bold">Ella Rises</span>
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navMenu">
      <ul class="navbar-nav ms-auto align-items-center gap-2">
        <% if (!user) { %>
          <li class="nav-item"><a class="nav-link er-donate-btn" href="/login">Login</a></li>
        <% } else { %>
          <li class="nav-item"><a class="nav-link nav-btn" href="/surveys">Surveys</a></li>
          <li class="nav-item"><a class="nav-link nav-btn" href="/milestones">Milestones</a></li>
          <li class="nav-item"><a class="nav-link nav-btn" href="/donations">Donations</a></li>
          <li class="nav-item"><a class="nav-link nav-btn active" href="/events">Events</a></li>

          <% if (user.role === "admin" || user.role === "manager") { %>
            <li class="nav-item"><a class="nav-link nav-btn" href="/participants">Participants</a></li>
            <li class="nav-item"><a class="nav-link nav-btn" href="/dashboard">Dashboard</a></li>
          <% } %>

          <li class="nav-item"><a class="nav-link nav-btn logout-btn" href="/logout">Logout</a></li>
        <% } %>
      </ul>
    </div>

  </div>
</nav>

<div class="container mt-4">

  <div class="text-center mb-3">
    <a href="/events" class="btn btn-secondary">‚Üê Back to Events</a>
  </div>

  <div class="card shadow-sm mb-5">
    <div class="card-header custom-nav-color text-white">
      <h5 class="mb-0">Edit Event</h5>
    </div>

    <div class="card-body">

      <form action="/editevent/<%= event.event_occurrence_id %>" method="POST">

        <!-- Template -->
        <div class="mb-3">
          <label class="form-label fw-bold">Event Template</label>
          <select class="form-select" name="event_template_id" id="templateSelect">
            <option value="">-- None --</option>
            <% templates.forEach(t => { %>
              <option value="<%= t.event_template_id %>"
                data-name="<%= t.event_name || '' %>"
                data-description="<%= t.description || '' %>"
                data-capacity="<%= t.default_capacity || '' %>"
                <%= event.event_template_id === t.event_template_id ? "selected" : "" %>>
                <%= t.event_name %> (Type: <%= t.event_type %>)
              </option>
            <% }) %>
          </select>
        </div>

        <div class="mb-3">
          <label class="form-label fw-bold">Event Name</label>
          <input id="eventName" type="text" class="form-control" name="event_name"
                 value="<%= event.event_name %>" required>
        </div>

        <div class="mb-3">
          <label class="form-label fw-bold">Description</label>
          <textarea id="description" class="form-control" name="description" rows="2"><%= event.description || "" %></textarea>
        </div>

        <div class="mb-3">
          <label class="form-label fw-bold">Start Date & Time</label>
          <input type="datetime-local" class="form-control" name="start_datetime"
                 value="<%= event.start_datetime.toISOString().slice(0,16) %>" required>
        </div>

        <div class="mb-3">
          <label class="form-label fw-bold">End Date & Time</label>
          <input type="datetime-local" class="form-control" name="end_datetime"
                 value="<%= event.end_datetime.toISOString().slice(0,16) %>" required>
        </div>

        <div class="mb-3">
          <label class="form-label fw-bold">Location</label>
          <input type="text" class="form-control" name="location"
                 value="<%= event.location %>" required>
        </div>

        <div class="mb-3">
          <label class="form-label fw-bold">Capacity</label>
          <input id="capacity" type="number" class="form-control" name="capacity"
                 value="<%= event.capacity %>" required>
        </div>

        <div class="mb-3">
          <label class="form-label fw-bold">Registration Deadline</label>
          <input type="datetime-local" class="form-control" name="registration_deadline"
                 value="<%= event.registration_deadline ? event.registration_deadline.toISOString().slice(0,16) : "" %>">
        </div>

        <button type="submit" class="er-btn w-100">
          Save Changes
        </button>
      </form>

    </div>
  </div>

</div>

<!-- AUTOFILL SCRIPT -->
<script nonce="<%= nonce %>">
  document.getElementById("templateSelect").addEventListener("change", function () {
    const opt = this.selectedOptions[0];
    if (!opt || !opt.value) return;

    document.getElementById("eventName").value = opt.dataset.name || "";
    document.getElementById("capacity").value = opt.dataset.capacity || "";

    const desc = opt.dataset.description || "";
    if (desc.trim() !== "") {
      document.getElementById("description").value = desc;
    }
  });
</script>

</body>
</html>
