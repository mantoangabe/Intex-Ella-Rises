<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/styles.css">
</head>

<body class="bg-light custom-bg">
<header class="er-header">

<!-- ==========================
     NAVBAR
=========================== -->
<nav class="navbar navbar-expand-lg er-nav">
  <div class="container d-flex justify-content-between align-items-center">

    <a class="navbar-brand d-flex align-items-center" href="/">
      <img src="/images/ella.jpeg" class="er-logo-small me-2">
      <span class="fw-bold">Ella Rises</span>
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navMenu">
      <ul class="navbar-nav ms-auto align-items-center gap-2">

        <% if (!user) { %>
          <li class="nav-item"><a class="nav-link er-donate-btn" href="/login">Login</a></li>
        <% } else { %>
          <li class="nav-item"><a class="nav-link nav-btn" href="/surveys">Surveys</a></li>
          <li class="nav-item"><a class="nav-link nav-btn" href="/milestones">Milestones</a></li>
          <li class="nav-item"><a class="nav-link nav-btn" href="/donations">Donations</a></li>
          <li class="nav-item"><a class="nav-link nav-btn" href="/events">Events</a></li>

          <% if (user.role === "admin") { %>
            <li class="nav-item"><a class="nav-link nav-btn" href="/participants">Participants</a></li>
            <li class="nav-item"><a class="nav-link nav-btn" href="/dashboard">Dashboard</a></li>
          <% } %>

          <li class="nav-item"><a class="nav-link nav-btn logout-btn" href="/logout">Logout</a></li>
        <% } %>

      </ul>
    </div>
  </div>
</nav>

</header>

<div class="container mt-4">

  <h3 class="mb-4 text-center">
    <i class="bi bi-search"></i> Search Results
  </h3>

  <!-- If nothing found -->
  <% if (!found || participants.length === 0) { %>
    <div class="card shadow-sm p-4 text-center">
      <h5>No users found for "<%= search %>"</h5>
      <a href="/participants" class="btn btn-primary mt-3">
        <i class="bi bi-arrow-left"></i> Back to Participants
      </a>
    </div>

  <% } else { %>

    <!-- Results Table -->
    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-person"></i> Matching Users</h5>
      </div>

      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover table-striped mb-0">
            <thead class="table-dark">
              <tr>
                <th>ID</th>
                <th>First</th>
                <th>Last</th>
                <th>Email</th>
                <th>Role</th>
                <th>DOB</th>
                <th>Phone</th>
                <th>City</th>
                <th>School/Employer</th>
                <th>Interests</th>
                <% if (user.role === "admin") { %>
                  <th>Actions</th>
                <% } %>
              </tr>
            </thead>

            <tbody>
              <% participants.forEach(p => { %>
                <tr>
                  <td><%= p.participant_id %></td>
                  <td><%= p.first_name %></td>
                  <td><%= p.last_name %></td>
                  <td><%= p.email %></td>
                  <td><%= p.role %></td>

                  <td>
                    <% 
                      let dob = p.dob;
                      if (dob instanceof Date) dob = dob.toISOString().split("T")[0];
                      else if (typeof dob === "string") dob = dob.split("T")[0];
                    %>
                    <%= dob %>
                  </td>

                  <td><%= p.phone %></td>
                  <td><%= p.city %></td>
                  <td><%= p.school_or_employer %></td>
                  <td><%= p.field_of_interest %></td>

                  <% if (user.role === "admin") { %>
                    <td>
                      <a href="/editparticipant/<%= p.participant_id %>" class="btn btn-success btn-sm">
                        <i class="bi bi-pencil"></i>
                      </a>

                      <form action="/deleteparticipant/<%= p.participant_id %>" method="POST" class="d-inline delete-form">
                        <button class="btn btn-danger btn-sm">
                          <i class="bi bi-trash"></i>
                        </button>
                      </form>
                    </td>
                  <% } %>
                </tr>
              <% }) %>
            </tbody>

          </table>
        </div>
      </div>
    </div>

    <div class="text-center mt-3">
      <a href="/participants" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to All Users
      </a>
    </div>

  <% } %>

</div>

<script nonce="<%= nonce %>">
document.addEventListener("DOMContentLoaded", () => {
  document.querySelectorAll(".delete-form").forEach(form => {
    form.addEventListener("submit", e => {
      if (!confirm("Are you sure you want to delete this user?")) e.preventDefault();
    });
  });
});
</script>

<script nonce="<%= nonce %>" src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
