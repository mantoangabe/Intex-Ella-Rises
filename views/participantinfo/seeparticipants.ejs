<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Database</title>
    <link rel="icon" type="image/x-icon" href="/images/logo.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/styles.css">
</head>

<body class="bg-light custom-bg">

<!-- NAVBAR -->
<header class="er-header">
<nav class="navbar navbar-expand-lg er-nav">
  <div class="container d-flex justify-content-between align-items-center">
    <a class="navbar-brand d-flex align-items-center" href="/">
      <img src="/images/ella.jpeg" class="er-logo-small me-2">
      <span class="fw-bold">Ella Rises</span>
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navMenu">
      <ul class="navbar-nav ms-auto align-items-center gap-2">

        <% if (!user) { %>
          <li class="nav-item"><a class="nav-link er-donate-btn" href="/login">Login</a></li>
        <% } else { %>
          <li class="nav-item"><a class="nav-link nav-btn" href="/surveys">Surveys</a></li>
          <li class="nav-item"><a class="nav-link nav-btn" href="/milestones">Milestones</a></li>
          <li class="nav-item"><a class="nav-link nav-btn" href="/donations">Donations</a></li>
          <li class="nav-item"><a class="nav-link nav-btn" href="/events">Events</a></li>

          <% if (user.role === "admin") { %>
            <li class="nav-item"><a class="nav-link nav-btn active" href="/participants">Participants</a></li>
            <li class="nav-item"><a class="nav-link nav-btn" href="/dashboard">Dashboard</a></li>
          <% } %>

          <li class="nav-item"><a class="nav-link nav-btn logout-btn" href="/logout">Logout</a></li>
        <% } %>

      </ul>
    </div>
  </div>
</nav>

<!-- Add User Button -->
<% if (user && user.role === "admin") { %>
<div class="container">
  <div class="row mb-4 justify-content-center">
    <div class="col-4 text-center">
      <a href="/addparticipant" class="nav-link nav-btn logout-btn mt-3">Add User</a>
    </div>
  </div>
</div>
<% } %>
</header>



<div class="container">

  <!-- Search Users -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-header custom-nav-color bg-primary text-white">
          <h5 class="mb-0"><i class="bi bi-search"></i> Search Users</h5>
        </div>
        <div class="card-body">
          <form action="/participants" method="GET">
            <div class="input-group">
              <input 
                type="text" 
                name="search" 
                class="form-control form-control-lg" 
                placeholder="Search by name, email, or role..."
                value="<%= search || '' %>"
              >
              <button class="btn btn-dark btn-lg" type="submit">
                <i class="bi bi-search"></i> Search
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>




  <!-- User Table -->
  <div class="row">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-header custom-nav-color bg-primary text-white">
          <h5 class="mb-0"><i class="bi bi-list-ul"></i> All Users</h5>
        </div>

        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover table-striped mb-0">
              <thead class="table-dark">
                <tr>
                  <th>UserID</th>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Email</th>
                  <th>Role</th>
                  <th>DOB</th>
                  <th>Phone</th>
                  <th>City</th>
                  <th>School/Employer</th>
                  <th>Interests</th>
                  <% if (user && user.role === "admin") { %><th>Actions</th><% } %>
                </tr>
              </thead>

              <tbody>
                <% participants.forEach(u => { %>
                  <tr>
                    <td><%= u.participant_id %></td>
                    <td><%= u.first_name %></td>
                    <td><%= u.last_name %></td>
                    <td><%= u.email %></td>
                    <td><%= u.role %></td>

                    <td>
                      <% let dob = u.dob; %>
                      <%= (dob instanceof Date ? dob.toISOString().split('T')[0] : dob.split('T')[0]) %>
                    </td>

                    <td><%= u.phone %></td>
                    <td><%= u.city %></td>
                    <td><%= u.school_or_employer %></td>
                    <td><%= u.field_of_interest %></td>

                    <% if (user && user.role === "admin") { %>
                      <td>
                        <form action="/deleteparticipant/<%= u.participant_id %>" method="POST" class="delete-form d-inline">
                          <button type="submit" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Delete
                          </button>
                        </form>
                        <a href="/editparticipant/<%= u.participant_id %>" class="btn btn-success btn-sm">
                          <i class="bi bi-pencil"></i> Edit
                        </a>
                      </td>
                    <% } %>

                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Pagination -->
        <div class="card-footer text-center">
          <nav>
            <ul class="pagination justify-content-center mb-0">

              <!-- Prev -->
              <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                <a class="page-link" href="/participants?page=<%= currentPage - 1 %>&search=<%= search %>">Previous</a>
              </li>

              <!-- Page numbers -->
              <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                  <a class="page-link" href="/participants?page=<%= i %>&search=<%= search %>"><%= i %></a>
                </li>
              <% } %>

              <!-- Next -->
              <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                <a class="page-link" href="/participants?page=<%= currentPage + 1 %>&search=<%= search %>">Next</a>
              </li>

            </ul>
          </nav>
        </div>

      </div>
    </div>
  </div>
</div>

<footer class="er-footer text-center py-3">
  <p class="mb-0">
    © 2025 Ella Rises — Empowering Young Women
    <a href="/teapot" class="ms-2" title="I'm a teapot" style="text-decoration:none;">
      ☕
    </a>
  </p>
</footer>

<!-- Delete confirm -->
<script nonce="<%= nonce %>">
document.addEventListener("DOMContentLoaded", () => {
  document.querySelectorAll(".delete-form").forEach(form => {
    form.addEventListener("submit", e => {
      if (!confirm("Are you sure you want to delete this user?")) e.preventDefault();
    });
  });
});
</script>

<script nonce="<%= nonce %>" src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
