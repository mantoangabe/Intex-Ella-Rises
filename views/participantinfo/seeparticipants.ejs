<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Database</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">
        <nav class="navbar navbar-dark bg-primary mb-4">
        <div class="container">
            <span class="navbar-brand mb-0 h1">
                <i class="bi bi-fire"></i> View Participants
                <br>
                <br>
                <a class="btn-dark" href="/home">üè†</a>
            </span>
        </div>
    </nav>
<% if ( role ==="M" ) { %>
<div class="container">
    <div class="row mb-4 justify-content-center">   
        <div class="col-4">
            <div class="text-center">
                <a href="/adduser" class="btn btn-danger btn-lg" role="button">Add User</a>            
            </div>
        </div>
    </div>
</div>
<% } %> 






    <div class="container">
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-search"></i> Search Users</h5>
                    </div>
                    <div class="card-body">
                        <form action="/searchusers" method="POST">
                            <div class="input-group">
                                <input 
                                    type="text" 
                                    name="UserSearch" 
                                    class="form-control form-control-lg" 
                                    placeholder="Enter username..." 
                                    required
                                >
                                <button class="btn btn-dark btn-lg" type="submit">
                                    <i class="bi bi-search"></i> Search
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-list-ul"></i> All Users</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>Email</th>
                                        <th>Role</th>
                                        <th>Date of Birth</th>
                                        <th>Phone</th>
                                        <th>Address</th>
                                        <th>City/Employer</th>
                                        <th>Interests</th>
                                        <% if ( role ==="M" ) { %><th>Actions</th><% } %>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% participants.forEach(u => { %>
                                        <tr>
                                            <td class="fw-bold"><%= u.username %></td>
                                            <td class="fw-bold"><%=u.password %></td>
                                            <td><span class="badge bg-danger fs-6"><%= u.level %></span></td>
                                            <% if ( role ==="M" ) { %><td>
                                                <form action="/users/deleteuser/<%= u.username %>" 
                                                      method="POST" 
                                                      style="display:inline;"
                                                      onsubmit="return confirm('Are you sure you want to delete this user?');">                                      
                                                    <button type="submit" class="btn btn-danger btn-sm">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </button>
                                                </form>
                                                
                                                <form>
                                                    <a href="/users/edit/<%= u.username %>" class="btn btn-success btn-sm">
                                                    <i class="bi bi-pencil"></i> Edit
                                                    </a>
                                                </form>
                                            </td>
                                            <% } %>
                                        </tr>

                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>