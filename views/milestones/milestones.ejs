<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Milestones</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/styles.css">
</head>

<body class="bg-light custom-bg">

<!-- NAVBAR (same as events) -->
<nav class="navbar navbar-expand-lg er-nav">
  <div class="container d-flex justify-content-between align-items-center">
    <a class="navbar-brand d-flex align-items-center" href="/">
      <img src="/images/ella.jpeg" class="er-logo-small me-2">
      <span class="fw-bold">Ella Rises</span>
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navMenu">
      <ul class="navbar-nav ms-auto align-items-center gap-2">

        <% if (!user) { %>
          <li class="nav-item"><a class="nav-link er-donate-btn" href="/login">Login</a></li>
        <% } else { %>

          <li class="nav-item"><a class="nav-link nav-btn" href="/surveys">Surveys</a></li>
          <li class="nav-item"><a class="nav-link nav-btn active" href="/milestones">Milestones</a></li>
          <li class="nav-item"><a class="nav-link nav-btn" href="/donations">Donations</a></li>
          <li class="nav-item"><a class="nav-link nav-btn" href="/events">Events</a></li>

          <% if (user.role === "admin" || user.role === "manager") { %>
            <li class="nav-item"><a class="nav-link nav-btn" href="/participants">Participants</a></li>
            <li class="nav-item"><a class="nav-link nav-btn" href="/dashboard">Dashboard</a></li>
          <% } %>

          <li class="nav-item"><a class="nav-link nav-btn logout-btn" href="/logout">Logout</a></li>
        <% } %>
      </ul>
    </div>

  </div>
</nav>

<div class="container">

<!-- Add new milestone (manager/admin only) -->
<% if (user && (user.role === "admin" || user.role === "manager")) { %>
<div class="container">
  <div class="row mb-4 justify-content-center">
    <div class="col-4">
      <div class="text-center">
        <a href="/addmilestone" 
           class="nav-link nav-btn logout-btn"
           style="margin-top: 20px;"
           role="button">
          Add New Milestone
        </a>
      </div>
    </div>
  </div>
</div>
<% } %>


<!-- Search card -->
<div class="row mb-4">
  <div class="col-12">
    <div class="card shadow-sm">
      <div class="card-header custom-nav-color text-white">
        <h5 class="mb-0"><i class="bi bi-search"></i> Search Milestones</h5>
      </div>

      <div class="card-body">
        <form action="/searchmilestones" method="POST">
          <div class="input-group">
            <input 
              type="text" 
              name="MilestoneSearch"
              class="form-control form-control-lg"
              placeholder="Search by title or participant ID..."
            >
            <button class="btn btn-dark btn-lg" type="submit">
              <i class="bi bi-search"></i> Search
            </button>
          </div>
        </form>
      </div>

    </div>
  </div>
</div>


<!-- Milestones table -->
<div class="card shadow-sm">
  <div class="card-header custom-nav-color text-white">
    <h5 class="mb-0"><i class="bi bi-flag"></i> Milestones</h5>
  </div>

  <div class="table-responsive">
    <table class="table table-hover table-striped mb-0">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Participant ID</th>
          <th>Title</th>
          <th>Achieved Date</th>

          <% if (user.role === "admin" || user.role === "manager") { %>
            <th>Actions</th>
          <% } %>
        </tr>
      </thead>

      <tbody>
        <% milestones.forEach(m => { %>
        <tr>
          <td><%= m.milestone_id %></td>
          <td><%= m.participant_id %></td>
          <td><%= m.title %></td>
          <td>
            <%= m.achieved_date ? m.achieved_date.toISOString().slice(0,10) : "" %>
          </td>

          <% if (user.role === "admin" || user.role === "manager") { %>
          <td>
            <a href="/editmilestone/<%= m.milestone_id %>" class="btn btn-success btn-sm">
              <i class="bi bi-pencil"></i> Edit
            </a>

            <form 
              action="/deletemilestone/<%= m.milestone_id %>"
              method="POST"
              class="delete-form"
              style="display:inline"
            >
              <button class="btn btn-danger btn-sm">
                <i class="bi bi-trash"></i> Delete
              </button>
            </form>
          </td>
          <% } %>

        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

</div>

</div>

<script nonce="<%= nonce %>">
  document.querySelectorAll(".delete-form").forEach(form => {
    form.addEventListener("submit", function (e) {
      if (!confirm("Are you sure you want to delete this milestone?")) {
        e.preventDefault();
      }
    });
  });
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
