<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Past Donations</title>
    <link rel="icon" type="image/x-icon" href="/images/logo.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/styles.css">
</head>

<body class="bg-light custom-bg">

<!-- NAVBAR -->
<nav class="navbar navbar-expand-lg er-nav">
  <div class="container d-flex justify-content-between align-items-center">
    <a class="navbar-brand d-flex align-items-center" href="/">
      <img src="/images/ella.jpeg" class="er-logo-small me-2">
      <span class="fw-bold">Ella Rises</span>
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navMenu">
      <ul class="navbar-nav ms-auto align-items-center gap-2">

        <% if (!user) { %>
          <li class="nav-item"><a class="nav-link er-donate-btn" href="/login">Login</a></li>
        <% } else { %>
          <li class="nav-item"><a class="nav-link nav-btn" href="/surveys">Surveys</a></li>
          <li class="nav-item"><a class="nav-link nav-btn" href="/milestones">Milestones</a></li>
          <li class="nav-item"><a class="nav-link nav-btn active" href="/donations">Donations</a></li>

          <% if (user.role === "admin" || user.role === "manager") { %>
            <li class="nav-item"><a class="nav-link nav-btn" href="/participants">Participants</a></li>
            <li class="nav-item"><a class="nav-link nav-btn" href="/dashboard">Dashboard</a></li>
          <% } %>

          <li class="nav-item"><a class="nav-link nav-btn logout-btn" href="/logout">Logout</a></li>
        <% } %>

      </ul>
    </div>
  </div>
</nav>

<div class="container mt-4">

  <div class="card shadow-sm">
    <div class="card-header custom-nav-color text-white">
      <h5 class="mb-0"><i class="bi bi-cash-stack"></i> Past Donations</h5>
    </div>

<!-- Search Donations -->
<div class="row mb-4">
  <div class="col-12">
    <div class="card shadow-sm">
      <div class="card-body">
        <form action="/searchdonations" method="GET">
          <div class="input-group">
            <input 
              type="text" 
              name="term"
              class="form-control form-control-lg"
              placeholder="Search by participant, amount, or date..."
              value="<%= searchTerm || '' %>"
            >
            <button class="btn btn-dark btn-lg" type="submit">
              <i class="bi bi-search"></i> Search
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-hover table-striped mb-0">
    <thead class="table-dark">
      <tr>
        <th>ID</th>

        <% if (user.role === "admin" || user.role === "manager") { %>
          <th>Participant</th>
        <% } %>

        <th>Amount</th>
        <th>Date</th>

        <% if (user.role === "admin" || user.role === "manager") { %>
          <th>Actions</th>
        <% } %>
      </tr>
    </thead>

    <tbody>
      <% donations.forEach(d => { %>
        <tr>
          <td><%= d.donation_id %></td>

          <% if (user.role === "admin" || user.role === "manager") { %>
            <td><%= d.first_name %> <%= d.last_name %></td>
          <% } %>

          <td>$<%= d.amount %></td>
          <td><%= new Date(d.donation_date).toISOString().slice(0, 10) %></td>

          <% if (user.role === "admin" || user.role === "manager") { %>
            <td>
              <a href="/editdonation/<%= d.donation_id %>" class="btn btn-success btn-sm">
                <i class="bi bi-pencil"></i> Edit
              </a>

              <form 
                action="/deletedonation/<%= d.donation_id %>"
                method="POST"
                class="delete-form"
                style="display:inline;"
              >
                <button class="btn btn-danger btn-sm">
                  <i class="bi bi-trash"></i> Delete
                </button>
              </form>
            </td>
          <% } %>

        </tr>
      <% }) %>
    </tbody>
  </table>

  <!-- Pagination -->
  <div class="d-flex justify-content-center mt-3 mb-4">
    <nav>
      <ul class="pagination">

        <% 
          const baseUrl = isSearch 
            ? `/searchdonations?term=${encodeURIComponent(searchTerm)}&page=` 
            : `/pastdonations?page=`; 
        %>

        <!-- Prev button -->
        <% if (currentPage > 1) { %>
          <li class="page-item">
            <a class="page-link" href="<%= baseUrl + (currentPage - 1) %>">Previous</a>
          </li>
        <% } else { %>
          <li class="page-item disabled"><span class="page-link">Previous</span></li>
        <% } %>

        <!-- Page numbers -->
        <% for (let p = 1; p <= totalPages; p++) { %>
          <li class="page-item <%= p === currentPage ? 'active' : '' %>">
            <a class="page-link" href="<%= baseUrl + p %>"><%= p %></a>
          </li>
        <% } %>

        <!-- Next button -->
        <% if (currentPage < totalPages) { %>
          <li class="page-item">
            <a class="page-link" href="<%= baseUrl + (currentPage + 1) %>">Next</a>
          </li>
        <% } else { %>
          <li class="page-item disabled"><span class="page-link">Next</span></li>
        <% } %>

      </ul>
    </nav>
  </div>

</div>

</div>

<script nonce="<%= nonce %>">
  document.querySelectorAll(".delete-form").forEach(form => {
    form.addEventListener("submit", function (e) {
      if (!confirm("Are you sure you want to delete this donation?")) {
        e.preventDefault();
      }
    });
  });
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
