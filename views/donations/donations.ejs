<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/x-icon" href="/images/logo.ico">
  <title>Donations | Ella Rises</title>

 

  <!-- Bootstrap (CDN) -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >
   <!-- Main site styles -->
  <link rel="stylesheet" href="/styles.css">
</head>

<header class="er-header">
<!-- ==========================
     NAVBAR
=========================== -->
<nav class="navbar navbar-expand-lg er-nav">
  <div class="container d-flex justify-content-between align-items-center">

    <!-- Logo -->
    <a class="navbar-brand d-flex align-items-center" href="/">
      <img src="/images/ella.jpeg" class="er-logo-small me-2">
      <span class="fw-bold">Ella Rises</span>
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navMenu">
      <ul class="navbar-nav ms-auto align-items-center gap-2">

        <% if (!user) { %>
          <li class="nav-item">
            <a class="nav-link er-donate-btn" href="/login">Login</a>
          </li>
        <% } else { %>
          <li class="nav-item"><a class="nav-link nav-btn" href="/surveys">Surveys</a></li>
          <li class="nav-item"><a class="nav-link nav-btn" href="/milestones">Milestones</a></li>
          <li class="nav-item"><a class="nav-link nav-btn" href="/donations">Donations</a></li>
          <li class="nav-item"><a class="nav-link nav-btn" href="/events">Events</a></li>

          <% if (user.role === "admin") { %>
            <li class="nav-item"><a class="nav-link nav-btn" href="/participants">Participants</a></li>
            <li class="nav-item"><a class="nav-link nav-btn" href="/dashboard">Dashboard</a></li>
          <% } %>

          <li class="nav-item">
            <a class="nav-link nav-btn logout-btn" href="/logout">Logout</a>
          </li>
        <% } %>
      </ul>
    </div>

  </div>
</nav>

  <main class="container my-5">

    <!-- Page Title / Intro -->
    <section class="text-center mb-4">
      <h1 class="mb-2">Commit to making a donation!</h1>
      <p class="text-muted">
        Such donations support the Ella Rises program.
      </p>
    </section>

    <!-- Donation Form Card -->
    <section class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm er-card">
          <div class="card-body p-4">

            <h2 class="h5 mb-3 text-center">Donation Details</h2>

            <!-- Optional server-side message -->
            <% if (typeof message !== "undefined" && message) { %>
              <div class="alert alert-info">
                <%= message %>
              </div>
            <% } %>

            <form action="/donations" method="POST">

 <input type="hidden" name="participant_id" value="<%= user.id %>">


              <!-- Amount -->
              <div class="mb-3">
                <label for="amount" class="form-label">
                  Pledged Donation Amount (USD)
                </label>
                <div class="input-group">
                  <span class="input-group-text">$</span>
                  <input
                    type="number"
                    step="0.01"
                    min="0"
                    class="form-control"
                    id="amount"
                    name="amount"
                    placeholder="0.00"
                    required
                  >
                </div>
                <div class="form-text">
                  Enter the donation amount in dollars.
                </div>
              </div>

              <!-- Submit -->
              <div class="d-grid mt-4">
                <button type="submit" class="er-btn-donation">
                  Save Donation
                </button>
              </div>

            </form>
             <p class="form-text">
        The donation is assigned to the participant assocaited with the current login.
      </p>
          </div>
        </div>
      </div>
    </section>

  </main>

  <!-- Optional Bootstrap JS (if you need it elsewhere) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
