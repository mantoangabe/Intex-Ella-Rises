<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta viewport="width=device-width, initial-scale=1" />
  <title>Ella Rises Dashboard</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/styles.css" />

  <!-- Tableau API -->
  <script type="module" src="https://public.tableau.com/javascripts/api/tableau.embedding.3.latest.min.js"></script>

  <style>
    /* FULL WIDTH, EDGE-TO-EDGE WRAPPER FOR TABLEAU */
    .tableau-fullwrap {
      width: 100vw;
      margin-left: calc(50% - 50vw); 
      margin-right: calc(50% - 50vw);
      overflow-x: hidden;
    }

    tableau-viz {
      width: 100%;
      height: 1200px;
      border: none;
      display: block;
    }

    @media (max-width: 768px) {
      tableau-viz {
        height: 1800px;
      }
    }
  </style>
</head>

<body class="bg-light custom-bg">

<header class="er-header">
  <nav class="navbar navbar-expand-lg er-nav">
    <div class="container d-flex justify-content-between align-items-center">

      <a class="navbar-brand d-flex align-items-center" href="/">
        <img src="/images/ella.jpeg" class="er-logo-small me-2" />
        <span class="fw-bold">Ella Rises</span>
      </a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navMenu">
        <ul class="navbar-nav ms-auto align-items-center gap-2">
          <% if (!user) { %>
            <li class="nav-item"><a class="nav-link er-donate-btn" href="/login">Login</a></li>
          <% } else { %>

            <li class="nav-item"><a class="nav-link nav-btn" href="/surveys">Surveys</a></li>
            <li class="nav-item"><a class="nav-link nav-btn" href="/milestones">Milestones</a></li>
            <li class="nav-item"><a class="nav-link nav-btn" href="/donations">Donations</a></li>
            <li class="nav-item"><a class="nav-link nav-btn" href="/events">Events</a></li>

            <% if (user.role === "admin") { %>
              <li class="nav-item"><a class="nav-link nav-btn" href="/participants">Participants</a></li>
              <li class="nav-item"><a class="nav-link nav-btn" href="/dashboard">Dashboard</a></li>
            <% } %>

            <li class="nav-item"><a class="nav-link nav-btn logout-btn" href="/logout">Logout</a></li>

          <% } %>
        </ul>
      </div>

    </div>
  </nav>
</header>


<!-- NORMAL CONTAINER FOR CENTERED TITLE -->
<div class="container mt-4">
  <h2 class="text-center mb-4">Ella Rises Dashboard</h2>
</div>


<!-- FULL-WIDTH TABLEAU VISUALIZATION -->
<div class="tableau-fullwrap">
  <tableau-viz
    id="ellaDashboard"
    src="https://public.tableau.com/views/Tab3-10/Dashboard2"
    toolbar="bottom"
    hide-tabs
  ></tableau-viz>
</div>


<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
