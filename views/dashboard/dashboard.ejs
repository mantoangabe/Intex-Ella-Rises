<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Bootstrap Tableau Embed</title>

  <!-- Bootstrap -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >
   <link rel="stylesheet" href="/styles.css">

  <style>
    .tableauPlaceholder {
      width: 100%;
      min-height: 800px;
      position: relative;
    }
  </style>
</head>

<body class="bg-light custom-bg">

</head>
<body class="bg-light custom-bg">
<header class="er-header">
<!-- ==========================
     NAVBAR
=========================== -->
<nav class="navbar navbar-expand-lg er-nav">
  <div class="container d-flex justify-content-between align-items-center">

    <!-- Logo -->
    <a class="navbar-brand d-flex align-items-center" href="/">
      <img src="/images/ella.jpeg" class="er-logo-small me-2">
      <span class="fw-bold">Ella Rises</span>
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navMenu">
      <ul class="navbar-nav ms-auto align-items-center gap-2">

        <% if (!user) { %>
          <li class="nav-item">
            <a class="nav-link er-donate-btn" href="/login">Login</a>
          </li>
        <% } else { %>
          <li class="nav-item"><a class="nav-link nav-btn" href="/surveys">Surveys</a></li>
          <li class="nav-item"><a class="nav-link nav-btn" href="/milestones">Milestones</a></li>
          <li class="nav-item"><a class="nav-link nav-btn" href="/donations">Donations</a></li>
          <li class="nav-item"><a class="nav-link nav-btn" href="/events">Events</a></li>

          <% if (user.role === "admin") { %>
            <li class="nav-item"><a class="nav-link nav-btn" href="/participants">Participants</a></li>
            <li class="nav-item"><a class="nav-link nav-btn" href="/dashboard">Dashboard</a></li>
          <% } %>

          <li class="nav-item">
            <a class="nav-link nav-btn logout-btn" href="/logout">Logout</a>
          </li>
        <% } %>
      </ul>
    </div>

  </div>
</nav>

  <!-- Page Content -->
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-10">

        <h2 class="text-center mb-4" style="margin-top: 20px;">Ella Rises Dashboard</h2>

        <!-- Tableau Embed -->
        <div class="tableauPlaceholder card shadow p-3" id="vizPublicExample">
          <noscript>
            <a href="#">
              <img 
                src="https://public.tableau.com/static/images/Re/RegionalSampleWorkbook/Overview/1.png" 
                alt="Tableau Dashboard">
            </a>
            <!-- Add Real Tableau Link!!! -->
          </noscript>

          <object class="tableauViz">
            <param name="host_url" value="https%3A%2F%2Fpublic.tableau.com%2F" />
            <param name="embed_code_version" value="3" />
            <param name="site_root" value="" />
            <param name="name" value="RegionalSampleWorkbook/Overview" />
            <param name="tabs" value="no" />
            <param name="toolbar" value="yes" />
          </object>
        </div>

      </div>
    </div>
  </div>

  <!-- Tableau Script -->
  <script>
    var container = document.getElementById("vizPublicExample");
    var vizObj = container.getElementsByTagName("object")[0];

    // Bootstrap responsive sizing
    vizObj.style.width = "100%";
    vizObj.style.height = "900px";

    var script = document.createElement("script");
    script.src = "https://public.tableau.com/javascripts/api/viz_v1.js";
    vizObj.parentNode.insertBefore(script, vizObj);
  </script>

  <!-- Bootstrap JS (optional, not required for Tableau) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
