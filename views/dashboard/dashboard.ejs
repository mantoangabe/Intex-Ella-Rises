<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Ella Rises Dashboard</title>

  <!-- Bootstrap -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <link rel="stylesheet" href="/styles.css" />

  <!-- Tableau Embedding API v3 -->
  <script
    type="module"
    src="https://public.tableau.com/javascripts/api/tableau.embedding.3.latest.min.js"
  ></script>

  <style>
    /* Responsive container that forces Tableau to scale correctly */
    .tableau-container {
      width: 100%;
      height: 100%;
      min-height: 900px;       /* fallback height */
      display: flex;
      justify-content: center;
    }

    tableau-viz {
      width: 100%;
      height: 90vh;            /* responsive height: fills 90% of viewport */
      max-width: 1300px;       /* prevents it from becoming too wide */
      border: none;
    }

    @media (max-width: 768px) {
      tableau-viz {
        height: 120vh;         /* extra height for mobile users */
      }
    }
  </style>
</head>

<body class="bg-light custom-bg">

<header class="er-header">
  <nav class="navbar navbar-expand-lg er-nav">
    <div class="container d-flex justify-content-between align-items-center">

      <!-- Logo -->
      <a class="navbar-brand d-flex align-items-center" href="/">
        <img src="/images/ella.jpeg" class="er-logo-small me-2" />
        <span class="fw-bold">Ella Rises</span>
      </a>

      <!-- Mobile Toggle -->
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navMenu"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Navigation Menu -->
      <div class="collapse navbar-collapse" id="navMenu">
        <ul class="navbar-nav ms-auto align-items-center gap-2">
          <% if (!user) { %>
            <li class="nav-item">
              <a class="nav-link er-donate-btn" href="/login">Login</a>
            </li>
          <% } else { %>

            <li class="nav-item"><a class="nav-link nav-btn" href="/surveys">Surveys</a></li>
            <li class="nav-item"><a class="nav-link nav-btn" href="/milestones">Milestones</a></li>
            <li class="nav-item"><a class="nav-link nav-btn" href="/donations">Donations</a></li>
            <li class="nav-item"><a class="nav-link nav-btn" href="/events">Events</a></li>

            <% if (user.role === "admin") { %>
              <li class="nav-item"><a class="nav-link nav-btn" href="/participants">Participants</a></li>
              <li class="nav-item"><a class="nav-link nav-btn" href="/dashboard">Dashboard</a></li>
            <% } %>

            <li class="nav-item">
              <a class="nav-link nav-btn logout-btn" href="/logout">Logout</a>
            </li>

          <% } %>
        </ul>
      </div>
    </div>
  </nav>
</header>

<!-- MAIN PAGE CONTENT -->
<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-12 text-center">

      <h2 class="mb-4">Ella Rises Dashboard</h2>

      <!-- Responsive Tableau Embed -->
      <div class="tableau-container">
        <tableau-viz
          id="ellaDashboard"
          src="https://public.tableau.com/views/Tab3-10/Dashboard2"
          toolbar="bottom"
          hide-tabs
        ></tableau-viz>
      </div>

    </div>
  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
