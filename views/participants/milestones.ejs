<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Participant Milestones</title>
  <!-- Link your CSS -->
  <link rel="stylesheet" href="/css/style.css">
  <!-- Optional: Bootstrap for polish -->
</head>
<body class="container mt-4">

  <h1>Milestones for Participant <%= participantId %></h1>

  <!-- Check if milestones exist -->
  <% if (milestones.length > 0) { %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Description</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% milestones.forEach(milestone => { %>
          <tr>
            <td><%= milestone.id %></td>
            <td><%= milestone.title %></td>
            <td><%= milestone.description %></td>
            <td><%= milestone.date %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p>No milestones found for this participant.</p>
  <% } %>

  <!-- Back button -->
  <a href="/participants" class="btn btn-secondary">Back to Participants</a>

</body>
</html>
