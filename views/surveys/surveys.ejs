<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Surveys</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/styles.css">
</head>

<body class="bg-light custom-bg">

<header class="er-header">
<!-- ==========================
     NAVBAR
=========================== -->
<nav class="navbar navbar-expand-lg er-nav">
  <div class="container d-flex justify-content-between align-items-center">

    <a class="navbar-brand d-flex align-items-center" href="/">
      <img src="/images/ella.jpeg" class="er-logo-small me-2">
      <span class="fw-bold">Ella Rises</span>
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navMenu">
      <ul class="navbar-nav ms-auto align-items-center gap-2">

        <% if (!user) { %>
            <li class="nav-item"><a class="nav-link er-donate-btn" href="/login">Login</a></li>
        <% } else { %>
            <li class="nav-item"><a class="nav-link nav-btn active" href="/surveys">Surveys</a></li>
            <li class="nav-item"><a class="nav-link nav-btn" href="/milestones">Milestones</a></li>
            <li class="nav-item"><a class="nav-link nav-btn" href="/donations">Donations</a></li>
            <li class="nav-item"><a class="nav-link nav-btn" href="/events">Events</a></li>

            <% if (user.role === "admin") { %>
                <li class="nav-item"><a class="nav-link nav-btn" href="/participants">Participants</a></li>
                <li class="nav-item"><a class="nav-link nav-btn" href="/dashboard">Dashboard</a></li>
            <% } %>

            <li class="nav-item"><a class="nav-link nav-btn logout-btn" href="/logout">Logout</a></li>
        <% } %>

      </ul>
    </div>

  </div>
</nav>
</header>


<div class="container">

  <div class="row mb-4 justify-content-center">
    <div class="col-4 text-center">
      <a href="/surveys/add" class="nav-link nav-btn logout-btn" style="margin-top:20px;">
        Add Survey
      </a>
    </div>
  </div>


  <!-- ==========================
       SEARCH BAR
  =========================== -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white custom-nav-color">
          <h5 class="mb-0"><i class="bi bi-search"></i> Search Surveys</h5>
        </div>
        <div class="card-body">
          <form method="GET" action="/surveys">
            <div class="input-group">
              <input type="text" class="form-control form-control-lg"
                     name="search" placeholder="Search by name or event..." value="<%= search %>">
              <button class="btn btn-dark btn-lg" type="submit">
                <i class="bi bi-search"></i> Search
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>


  <!-- ==========================
       SURVEY TABLE
  =========================== -->
  <div class="row">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white custom-nav-color">
          <h5 class="mb-0"><i class="bi bi-list-ul"></i> All Surveys</h5>
        </div>

        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
              <thead class="table-dark">
                <tr>
                  <th>ID</th>
                  <th>Participant</th>
                  <th>Event</th>
                  <th>Satisfaction</th>
                  <th>Usefulness</th>
                  <th>Instructor</th>
                  <th>Overall</th>
                  <th>NPS</th>
                  <th>Date</th>
                  <% if (user.role === "admin") { %>
                    <th>Actions</th>
                  <% } %>
                </tr>
              </thead>

              <tbody>
                <% surveys.forEach(s => { %>
                <tr>
                  <td><%= s.survey_id %></td>
                  <td><%= s.first_name %> <%= s.last_name %></td>
                  <td><%= s.event_name %></td>
                  <td><%= s.satisfaction_score %></td>
                  <td><%= s.usefulness_score %></td>
                  <td><%= s.instructor_score %></td>
                  <td><%= s.overall_score %></td>
                  <td><%= s.nps_bucket %></td>
                  <td><%= new Date(s.submission_date).toISOString().split("T")[0] %></td>

                  <% if (user.role === "admin") { %>
                  <td>
                    <a href="/surveys/edit/<%= s.survey_id %>" class="btn btn-success btn-sm">
                      <i class="bi bi-pencil"></i> Edit
                    </a>

                    <form action="/surveys/delete/<%= s.survey_id %>" 
                          method="POST"
                          class="delete-form d-inline">
                      <button class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> Delete
                      </button>
                    </form>
                  </td>
                  <% } %>

                </tr>
                <% }); %>
              </tbody>

            </table>
          </div>
        </div>

        <!-- ==========================
             PAGINATION (MATCHED STYLE)
        =========================== -->
        <div class="card-footer bg-light">
          <nav aria-label="Survey pages">
            <ul class="pagination justify-content-center my-2">

              <!-- Prev -->
              <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                <a class="page-link"
                   href="/surveys?page=<%= currentPage - 1 %>&search=<%= search %>">
                  ‹ Prev
                </a>
              </li>

              <!-- Page numbers -->
              <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                  <a class="page-link" href="/surveys?page=<%= i %>&search=<%= search %>">
                    <%= i %>
                  </a>
                </li>
              <% } %>

              <!-- Next -->
              <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                <a class="page-link"
                   href="/surveys?page=<%= currentPage + 1 %>&search=<%= search %>">
                  Next ›
                </a>
              </li>

            </ul>
          </nav>
        </div>

      </div>
    </div>
  </div>

</div>

<script nonce="<%= nonce %>">
document.addEventListener("DOMContentLoaded", () => {
  document.querySelectorAll(".delete-form").forEach(form => {
    form.addEventListener("submit", e => {
      if (!confirm("Delete this survey?")) e.preventDefault();
    });
  });
});
</script>

<script nonce="<%= nonce %>" src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
