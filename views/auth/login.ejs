<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">

  
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
    rel="stylesheet"
  >

  <link rel="stylesheet" href="/styles.css">
</head>

<body class="login-page">

  <!-- HEADER WITH SMALL LOGO -->
  <header class="er-header-small">
    <div class="er-logo-wrap">
      <img src="/images/ella.jpeg" alt="Ella Rises Logo">
    </div>
  </header>

  <!-- LOGIN CARD CENTERED -->
  <main class="login-wrapper">

    <div class="login-card">
      <h1>Login</h1>

      <!-- Login Form -->
      <form action="/login" method="POST">

        <div class="form-group mb-3">
          <label for="username">Username</label>
          <input 
            type="text" 
            id="username" 
            name="username" 
            class="form-control"
            required
          >
        </div>

        <div class="form-group mb-3">
          <label for="password">Password</label>
          <input 
            type="password" 
            id="password" 
            name="password" 
            class="form-control"
            required
          >
        </div>

        <button type="submit" class="btn w-100">
          Login
        </button>
      </form>
    </div>

  </main>

  <!-- FOOTER -->
  <footer class="er-footer">
    <p>&copy; <%= new Date().getFullYear() %> Ella Rises. All rights reserved.</p>
  </footer>

</body>
</html>
