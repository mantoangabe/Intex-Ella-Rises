<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <link rel="icon" type="image/x-icon" href="/images/logo.ico">
  
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
    rel="stylesheet"
  >

  <link rel="stylesheet" href="/styles.css">
</head>

<body class="login-page">

  <!-- HEADER WITH SMALL LOGO -->
  <header class="er-header-small">
    <div class="er-logo-wrap">
      <img src="/images/ella.jpeg" alt="Ella Rises Logo">
    </div>
  </header>

  <!-- LOGIN CARD CENTERED -->
  <main class="login-wrapper">

    <div class="login-card">
      <h1>Login</h1>

      <!-- Login Form -->
      <form action="/login" method="POST">

        <div class="form-group mb-3">
          <label for="username">Username</label>
          <input 
            type="text" 
            id="username" 
            name="username" 
            class="form-control"
            required
          >
        </div>

        <div class="form-group mb-3">
          <label for="password">Password</label>
          <input 
            type="password" 
            id="password" 
            name="password" 
            class="form-control"
            required
          >
        </div>

        <div class="d-flex gap-2 mt-3">
  <a href="/" class="btn btn-secondary w-50 login-btn">
    ← Back
  </a>

  <button type="submit" class="btn er-btn-pink w-50 login-btn">
    Login
  </button>
</div>


      </form>
    </div>

  </main>

  <!-- FOOTER -->
<footer class="er-footer text-center py-3">
  <p class="mb-0">
    © 2025 Ella Rises — Empowering Young Women
    <a href="/teapot" class="ms-2" title="I'm a teapot" style="text-decoration:none;">
      ☕
    </a>
  </p>
</footer>

</body>
</html>
